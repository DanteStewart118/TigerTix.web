@model IndexViewModel
@{
    ViewBag.Title = "Event Submission";

}
<!DOCTYPE html>
<html>
<head>
    <title>TigerTix: @ViewBag.Title</title>
</head>
<body style="background-color:floralwhite">
    <h1>Event Submission</h1>

    <form method="post">
        <label>Event name: </label>
        <br />
        <input type="text" name="eventName" />
        <br />
        <label>
            Enter Date:
            <br />
            <input type="date" name="date" required pattern="\d{4}-\d{2}-\d{2}">
            <span class="validity"></span>
        </label>
        <br />
        <label>Location: </label>
        <br />
        <select name="Location" id="venues">
            <option value="memstad">Memorial Stadium</option>
            <option value="liljohn">Littlejohn Coliseum</option>
            <option value="kingstad">Doug Kingsmore Stadium</option>
            <option value="riggs">Riggs Field </option>
        </select>
        <br />
        <label for="name">Description:</label>
        <br />
        <textarea rows="5" cols="50" name="desc">
         </textarea>
        <br />
        <label>Price</label>
        <br />
        <input type="number" step="any" id="ticketPrice"/>
        <br />
        <input type="submit" value="Submit Event" />
        <button onclick="window.location.href = '/App/ShowUsers'">Show users</button>
        <button onclick="window.location.href = '/Events/Index'">Want to Submit an Event?</button>
        <button onclick="window.location.href = '/Events/Eventlist'">Event List</button>
        <button onclick="window.location.href = '/Cart/Index'">Go to cart</button>
    </form>
    <br />
    <br />
    <br />
    <br />
    <br />

</body>
</html>
